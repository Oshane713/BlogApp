<% include ./partials/header%>

<div class="ui main text container segment">
  <div class="ui huge header">
    <%= blog.title %>
  </div>
  <div class="ui top attached">
    <div class="item">
      <img class="ui centered rounded image" src="<%= blog.image %>">
      <div class="content">
        <span><%= blog.created.toDateString() %></span>
      </div>
      <div class="description">
        <p><%- blog.body %></p>
      </div>
      <a class="tiny ui black button" href="/blogs/<%= blog._id %>/edit">Edit</a>
      <form id="delete" class="" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button class=" tiny ui red basic button ">DELETE</button>
      </form>
    </div>
  </div>
</div>
<% include ./partials/footer%>
 
